Solution by Soheil Nematihaji:\
\
select america_table.name as America ,Asia_table.name  as Asia, Europe_table.name as Europe  from \
(select row_number() over() as row_num,name from student where continent = 'America' order by name) as america_table  \
left outer join (select row_number() over() as row_num,name from student where continent = 'Asia' order by name) Asia_table on Asia_table.row_num=america_table.row_num left outer join \
(select row_number() over() as row_num,name from student where continent = 'Europe' order by name) as Europe_table on america_table.row_num=Europe_table.row_num }